{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "baseUrl": ".", 
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {"*": ["node_modules/*"]}
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
  ]
}